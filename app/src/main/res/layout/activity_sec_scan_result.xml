<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/comm_background"
        android:orientation="vertical">

        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_sec_scan_result"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/bg_sec_type04"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <Button
                    android:id="@+id/button_sec_scan_result_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/back_jiantou" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="安全检测"
                    android:textColor="@color/white"
                    android:textSize="19dp" />


                <Button
                    android:id="@+id/button_sec_scan_result_setting"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="-5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/user_setting2"/>


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_sec_type04"
                    >


            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/imageView_sec_scan_result01"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:paddingTop="20dp"
                        android:src="@mipmap/sec_scan_result_01" />
                </RelativeLayout>


                    <TextView
                        android:id="@+id/textView_sec_scan_result_tips01"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:gravity="center"
                        android:text="安全"
                        android:textColor="#d0ffffff"
                        android:textSize="27dp"
                        android:textStyle="bold"
                        />

                        <TextView
                            android:id="@+id/textView_sec_scan_result_tips02"
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:gravity="center"
                            android:text="卫士保护中，请放心使用"
                            android:textColor="#d0ffffff"
                            android:textSize="13dp"
                            />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>


                </LinearLayout>






<!--                我的安全指数 -->

                <LinearLayout
                    android:id="@+id/linearyout_user_biaoti01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="-35dp"
                    android:layout_marginRight="13dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:elevation="3dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:src="@mipmap/sec_scan_img01" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >


                        <TextView
                            android:id="@+id/textView_sec_scan_result_tip03"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical|bottom"
                            android:text="我的安全指数"
                            android:textColor="#dd555555"
                            android:textSize="16.5dp" />

                            <TextView
                                android:id="@+id/textView_sec_scan_result_tip04"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical|top"
                                android:text="专业综合的安全评估"
                                android:textColor="#77555555"
                                android:textSize="12dp" />

                        </LinearLayout>



                        <Button
                            android:id="@+id/button_sec_scan_result_detail"
                            android:layout_width="72dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="-100dp"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:text="查看详情"
                            android:textColor="#dd555555"
                            android:textSize="13dp"
                            android:background="@drawable/button_style3"
                            />



                    </LinearLayout>




<!--                    66666666666666666666666-->


                    <LinearLayout
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linearyout_user_sub01"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="594"
                                android:textColor="#ff8602"
                                android:textSize="24dp" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_marginTop="-8dp"
                                android:gravity="center"
                                android:text="本周评估结果"
                                android:textColor="#cc555555"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/gezi_line"
                            android:layout_height="35dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="20dp"
                            android:background="#15111111"
                            />


                        <LinearLayout
                            android:id="@+id/linearyout_user_sub02"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="+20"
                                android:textColor="#ff8602"
                                android:textSize="24dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_marginTop="-8dp"
                                android:gravity="center"
                                android:text="本周分数变化"
                                android:textColor="#cc555555"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/gezi_line"
                            android:layout_height="35dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="20dp"
                            android:background="#15111111"
                            />


                        <LinearLayout
                            android:id="@+id/linearyout_user_sub03"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="25%"
                                android:textColor="#ff8602"
                                android:textSize="24dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="打败全国用户"
                                android:textColor="#cc555555"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>



                    <!--                    66666666666666666666666-->



                </LinearLayout>





            </LinearLayout>




        </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>