<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_list_addapplock"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="13dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@mipmap/icon"
        />

        <TextView
            android:id="@+id/textView_list_addapplock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:gravity="center_vertical"
            android:text="@string/textview_title_applock_appname_samp"
            android:textSize="16dp"
            android:textColor="#444444" />

        <ImageView
            android:id="@+id/imageView_list_addapplock_select"
            android:layout_width="40dp"
            android:padding="10dp"
            android:layout_marginLeft="-65dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:src="@mipmap/add_applock_select_no"
            android:onClick="selectButtonClick"
            />

    </LinearLayout>


    <ImageView
        android:layout_marginLeft="70dp"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#19666666"
        />

</LinearLayout>