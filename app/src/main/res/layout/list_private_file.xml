<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_list_private_file"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_parttern_icon_folder_xiangce"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView_list_private_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_vertical"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp"
                android:text="私密相册"
                android:textSize="14dp"
                android:textColor="#444444" />


            <TextView
                android:id="@+id/textView_list_private_file2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:text="2019-12-20 21:30"
                android:textSize="11dp"
                android:textColor="#88444444" />

        </RelativeLayout>



        <ImageView
            android:id="@+id/imageView_list_private_about"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_common_item_edit_more"
            android:alpha="0.5"
            android:layout_marginLeft="-45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:focusable="false"
            android:onClick="infoButtonClick"
            />



    </LinearLayout>


    <ImageView
        android:layout_marginLeft="70dp"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#19666666"
        />

</LinearLayout>