<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_top_bar"
        android:orientation="vertical">

        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_user_login"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/bg_top_bar"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <Button
                    android:id="@+id/button_user_login_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/back_jiantou" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView_user_login_photo_01"
                android:layout_above="@+id/editText_user_login_01"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="40dp"
                android:src="@mipmap/ic_register_gender_man_normal"
                />




            <EditText
                android:id="@+id/editText_user_login_01"
                android:layout_above="@+id/editText_user_login_02"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:textSize="15dp"
                android:textColor="#ddffffff"
                android:inputType="number"

                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="top|left"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"

                android:hint="请输入手机号"
                android:background="@drawable/line_edittext_normal_back"
                />




            <EditText
                android:id="@+id/editText_user_login_02"
                android:layout_above="@+id/button_user_login_01"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:textSize="15dp"
                android:textColor="#ddffffff"
                android:inputType="number"

                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="top|left"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"

                android:hint="请输入验证码"
                android:background="@drawable/line_edittext_normal_back"
                />


            <Button
                android:id="@+id/button_user_login_01"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"

                android:layout_centerHorizontal="true"
                android:text="登 录"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:background="#00D78D"/>




            <TextView
                android:id="@+id/textView_user_login_title_01"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/button_user_login_01"
                android:gravity="center"
                android:text="--- 第三方登录 ---"
                android:textColor="#ffffff"
                android:textSize="14.5dp" />





            <LinearLayout
                android:layout_below="@+id/textView_user_login_title_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_top_bar"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearyout_user_login_sub01"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_marginTop="19dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="-30dp"
                        android:src="@mipmap/user_sub01"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearyout_user_login_sub02"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="19dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:src="@mipmap/user_sub02"
                        />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linearyout_user_login_sub03"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_marginLeft="-30dp"
                        android:layout_marginTop="19dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:src="@mipmap/user_sub03"
                        />
                </LinearLayout>
            </LinearLayout>







        </RelativeLayout>




    </LinearLayout>

</android.support.v4.widget.DrawerLayout>